k<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <title>HAPPY 10  MONTHS AMOR!!!</title>
  <style>
    :root{
      --bg:#f8f4e8;     /* cream */
      --ink:#0d245f;    /* dark blue */
      --comet:#1d3a8a;  /* comet blue */
    }
    *{box-sizing:border-box}
    html,body{height:100%;margin:0}
    body{
      background:var(--bg);
      color:var(--ink);
      font-family:ui-rounded,system-ui,-apple-system,"Segoe UI",Arial,sans-serif;
      overflow:hidden;             /* keep canvases inside */
      cursor:none;                 /* hide default cursor */
    }

    /* canvases */
    #sky{position:fixed; inset:0; z-index:0; pointer-events:none}
    #cursor{position:fixed; inset:0; z-index:3; pointer-events:none}

    /* header */
    h1.header{
      position:fixed; top:16px; left:50%; transform:translateX(-50%);
      margin:0; z-index:2; text-align:center;
      font-weight:800; letter-spacing:.5px;
      font-size:clamp(1.6rem,5vw,2.6rem);
      color:var(--ink);
      text-shadow:0 1px 0 rgba(13,36,95,.08);
      pointer-events:none;
    }

    /* perfectly centered video area */
    main.page{
      position:relative; z-index:1;
      height:100vh;                      /* full viewport */
      display:grid; place-items:center;  /* true center */
      padding:0 4vw;
    }
    .video-frame{
      width: min(88vw, 980px);
      max-height: calc(100vh - 180px);   /* room for title + timer */
      background: var(--bg);             /* cream letterbox */
      border-radius:16px;
      box-shadow:0 22px 48px rgba(0,0,0,.25);
      outline:1px solid rgba(13,36,95,.15);
      overflow:hidden;
    }
    video{
      display:block;
      width:100%;
      height:auto;
      max-height:inherit;                /* obey the frame cap */
      object-fit: contain;               /* keep full video */
      background: var(--bg);             /* cream letterbox inside video */
    }

    /* bottom timer */
    .timer-bar{
      position:fixed; left:50%; bottom:12px; transform:translateX(-50%);
      z-index:2; background:rgba(255,255,255,.78);
      color:var(--ink); border:1px solid rgba(13,36,95,.18);
      border-radius:999px; padding:.6rem 1rem;
      backdrop-filter:blur(6px);
      box-shadow:0 8px 20px rgba(0,0,0,.12);
      font-weight:700; letter-spacing:.3px;
      text-align:center;
      white-space:nowrap;
    }
  </style>
</head>
<body>
  <!-- background stars -->
  <canvas id="sky"></canvas>
  <!-- shooting-star cursor layer -->
  <canvas id="cursor"></canvas>

  <!-- title -->
  <h1 class="header">HAPPY 9 MONTHS AMOR!!!</h1>

  <!-- centered video -->
  <main class="page">
    <div class="video-frame">
      <video src="vileo.mp4" controls playsinline preload="metadata"></video>
    </div>
  </main>

  <!-- months + days since Mar 30, 2025 -->
  <div class="timer-bar" id="timer">Together: …</div>

  <script>
    /* ========= BACKGROUND: real 5-point stars + tiny dots ========= */
    const sky = document.getElementById('sky');
    const sctx = sky.getContext('2d');

    function skyResize(){
      sky.width = innerWidth;
      sky.height = innerHeight;
    }
    addEventListener('resize', skyResize); skyResize();

    const DOT_COUNT  = Math.min(260, Math.floor((innerWidth*innerHeight)/6000));
    const STAR_COUNT = Math.min(120, Math.floor((innerWidth*innerHeight)/15000));

    const dots = [];
    const stars = [];
    const rnd = (a,b)=> Math.random()*(b-a)+a;

    function newDot(y = Math.random()*sky.height){
      return {
        x: Math.random()*sky.width,
        y,
        r: rnd(0.6, 1.6),
        baseA: rnd(0.4, 0.9),
        t: rnd(0, Math.PI*2), ts: rnd(0.003, 0.01),
        vx: rnd(-0.05, 0.05), vy: rnd(0.04, 0.12)
      };
    }
    function newStar(y = Math.random()*sky.height){
      return {
        x: Math.random()*sky.width, y,
        R: rnd(5, 10), r: rnd(2, 4),
        rot: rnd(0, Math.PI*2),
        baseA: rnd(0.55, 0.95),
        t: rnd(0, Math.PI*2), ts: rnd(0.002, 0.006),
        vx: rnd(-0.04, 0.04), vy: rnd(0.04, 0.10)
      };
    }
    for(let i=0;i<DOT_COUNT;i++)  dots.push(newDot());
    for(let i=0;i<STAR_COUNT;i++) stars.push(newStar());

    function drawFiveStar(ctx, x, y, R, r, rot){
      ctx.save(); ctx.translate(x, y); ctx.rotate(rot);
      ctx.beginPath();
      for(let i=0;i<10;i++){
        const ang = i * Math.PI/5;
        const rad = (i % 2 === 0) ? R : r;
        const px = Math.cos(ang) * rad;
        const py = Math.sin(ang) * rad;
        if(i===0) ctx.moveTo(px,py); else ctx.lineTo(px,py);
      }
      ctx.closePath(); ctx.fill(); ctx.restore();
    }

    function skyFrame(){
      sctx.clearRect(0,0,sky.width,sky.height);

      for(const d of dots){
        d.x += d.vx; d.y += d.vy;
        if(d.x < -5) d.x = sky.width+5;
        if(d.x > sky.width+5) d.x = -5;
        if(d.y > sky.height+5){ d.y = -5; d.x = Math.random()*sky.width; }

        d.t += d.ts;
        const tw = 0.5 + Math.sin(d.t)*0.5;
        const a  = Math.max(0, Math.min(1, d.baseA*0.6 + tw*0.5));
        sctx.beginPath();
        sctx.arc(d.x, d.y, d.r + tw*0.4, 0, Math.PI*2);
        sctx.fillStyle = `rgba(13,36,95,${a})`;
        sctx.shadowColor = "rgba(13,36,95,0.35)";
        sctx.shadowBlur = 2 + tw*2.5;
        sctx.fill(); sctx.shadowBlur = 0;
      }

      for(const s of stars){
        s.x += s.vx; s.y += s.vy;
        if(s.x < -10) s.x = sky.width+10;
        if(s.x > sky.width+10) s.x = -10;
        if(s.y > sky.height+10){ s.y = -10; s.x = Math.random()*sky.width; }

        s.t += s.ts; s.rot += 0.0008;
        const tw = 0.5 + Math.sin(s.t)*0.5;
        const a  = Math.max(0, Math.min(1, s.baseA*0.55 + tw*0.5));
        const grow = 1 + tw*0.18;

        sctx.fillStyle   = `rgba(13,36,95,${a})`;
        sctx.shadowColor = "rgba(13,36,95,0.5)";
        sctx.shadowBlur  = 5 + tw*6;
        drawFiveStar(sctx, s.x, s.y, s.R*grow, s.r*grow, s.rot);
        sctx.shadowBlur  = 0;
      }

      requestAnimationFrame(skyFrame);
    }
    skyFrame();

    /* ========= SHOOTING-STAR CURSOR ========= */
    const cometCanvas = document.getElementById('cursor');
    const cctx = cometCanvas.getContext('2d');
    function cometResize(){ cometCanvas.width = innerWidth; cometCanvas.height = innerHeight; }
    addEventListener('resize', cometResize); cometResize();

    const comets = [];
    let prevX = null, prevY = null;

    function spawnComet(x, y, dx, dy){
      const speed = Math.hypot(dx, dy) || 1;
      const vx = dx * 0.25;
      const vy = dy * 0.25;
      comets.push({
        x, y, vx, vy,
        life: 1,
        size: Math.min(12, 6 + speed*0.02)  // faster move = bigger comet
      });
      if (comets.length > 120) comets.splice(0, comets.length - 120);
    }

    addEventListener('mousemove', (e)=>{
      if(prevX==null){ prevX=e.clientX; prevY=e.clientY; }
      const dx = e.clientX - prevX;
      const dy = e.clientY - prevY;
      spawnComet(e.clientX, e.clientY, dx, dy);
      prevX = e.clientX; prevY = e.clientY;
    });

    function drawComet(c){
      // head
      cctx.beginPath();
      cctx.arc(c.x, c.y, Math.max(2, c.size*0.35), 0, Math.PI*2);
      cctx.fillStyle = `rgba(29,58,138, ${0.9 * c.life})`; // head
      cctx.shadowColor = 'rgba(29,58,138,0.7)';
      cctx.shadowBlur = 10;
      cctx.fill();
      cctx.shadowBlur = 0;

      // tail (gradient opposite velocity)
      const tx = c.x - c.vx * 6;
      const ty = c.y - c.vy * 6;
      const grad = cctx.createLinearGradient(c.x, c.y, tx, ty);
      grad.addColorStop(0, `rgba(29,58,138, ${0.9 * c.life})`);
      grad.addColorStop(1, `rgba(29,58,138, 0)`);
      cctx.strokeStyle = grad;
      cctx.lineWidth = Math.max(1.5, c.size * 0.6 * c.life);
      cctx.lineCap = 'round';
      cctx.beginPath();
      cctx.moveTo(c.x, c.y);
      cctx.lineTo(tx, ty);
      cctx.stroke();
    }

    function cometFrame(){
      cctx.clearRect(0,0,cometCanvas.width,cometCanvas.height);
      for(const c of comets){
        c.x += c.vx; c.y += c.vy;
        c.vx *= 0.92; c.vy *= 0.92;   // friction
        c.size *= 0.98;
        c.life *= 0.94;
      }
      for(const c of comets){ drawComet(c); }
      // remove faded
      for(let i=comets.length-1;i>=0;i--) if(comets[i].life < 0.06) comets.splice(i,1);
      requestAnimationFrame(cometFrame);
    }
    cometFrame();

    /* ========= Months + Days timer since Mar 30, 2025 ========= */
    const START_DATE = new Date('2025-03-30T00:00:00');

    function daysInMonth(y, m){ return new Date(y, m+1, 0).getDate(); }
    function addMonths(d, months){
      const y = d.getFullYear(), m = d.getMonth(), day = d.getDate();
      const targetM = m + months;
      const nd = new Date(y, targetM, 1);
      const last = daysInMonth(nd.getFullYear(), nd.getMonth());
      nd.setDate(Math.min(day, last));
      return nd;
    }
    function diffMonthsDays(from, to){
      let months = (to.getFullYear()-from.getFullYear())*12 + (to.getMonth()-from.getMonth());
      if (to.getDate() < from.getDate()) months -= 1;
      const anchor = addMonths(from, months);
      const days = Math.floor((to - anchor)/(24*60*60*1000));
      return { months, days };
    }
    function updateTimer(){
      const now = new Date();
      const {months, days} = diffMonthsDays(START_DATE, now);
      const m = Math.max(0, months), d = Math.max(0, days);
      document.getElementById('timer').textContent =
        `Together: ${m} month${m!==1?'s':''} • ${d} day${d!==1?'s':''}`;
    }
    updateTimer();
    setInterval(updateTimer, 30*60*1000);
  </script>
</body>
</html>

